---
import BaseLayout from './BaseLayout.astro';

const { frontmatter } = Astro.props;
---
<BaseLayout>
  <div class="post-header">
  <p class="center"><em>{frontmatter.description}</em></p>
  <img class="foto" src={frontmatter.image.url} width="450" alt={frontmatter.image.alt} />
</div>

  <div class="tags">
    <span class="tags-title"> Теги:</span>
    <div class="tag-list">
      {frontmatter.tags.map((tag: string) => (
        <a href={`/tags/${tag}`} class="tag">{tag}</a>
      ))}
    </div>
  </div>


  <div class="post-content">
     <slot />
  </div>

</BaseLayout>

<style>
 .post-content {
  max-width: 1500px;
  margin: 2rem auto;
  padding: 2rem;
  border-radius: 1rem;
  box-shadow: 0 0 25px rgba(0, 0, 0, 0.05);
  background-color: #e9ddff; 
  color: inherit;
  transition: background-color 0.3s ease;
}
html.dark .post-content {
 background-color: #756c84; 
}

a:hover {
  text-decoration: underline;
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 2rem;
  margin-bottom: 2rem;
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 0 10px rgba(0,0,0,0.05);
}

th {
  background: #eee4ff;
  text-align: left;
  font-weight: 600;
  padding: 12px 16px;
}

td {
  border-top: 1px solid #eee;
  padding: 12px 16px;
}

tr:nth-child(even) td {
  background: #fdfaff;
}

/* Стили для плюсов и минусов */
strong:has(+ ul) {
  display: block;
  margin-top: 1rem;
  font-weight: 600;
  color: #2c2c2c;
}

/* Плашки */
blockquote {
  border-left: 4px solid #a678f5;
  background: #f4eeff;
  padding: 1rem;
  margin: 1.5rem 0;
  font-style: italic;
  color: #4b3966;
}

  
  .post-header{
    text-align: center;
    margin-bottom: 2rem;
  }
 
  a {
  color: #6A0DAD; 
}

.tags {
  margin: 2rem 0;
  padding: 1rem;
  background-color: #f7f0ff;
  border-left: 4px solid #9B30FF; 
  border-radius: 0.5rem;
}

.tags-title {
  display: block;
  font-weight: bold;
  margin-bottom: 0.5rem;
  color: #6A0DAD;
}

.tag {
  padding: 0.4em 1em;
  background-color: #e9ddff; 
  color: #6A0DAD;
  text-decoration: none;
  font-size: 0.95em;
  border-radius: 2em;
  border: 1px solid #c9a8ff;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.tag:hover {
  background-color: #b577e2;
  color: white;
}

.foto{
    max-width: 50%;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);

  }

  @media (max-width: 768px) {
    .post-image {
      width: 100%;
      border-radius: 0.5rem;
    }

    .tag {
      font-size: 0.9em;
    }
  }
</style>